@model IEnumerable<EliteDangerous_test.Models.Commodities>

@{
    ViewBag.Title = "Commodities list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of commodities</h2>


<table class="table">
    <tr>
        <th>
           
            @Html.DisplayNameFor(model => model.name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.average_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.name, "Details",  new { id = item.Id }, null)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.average_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>

    </tr>
}

</table>
